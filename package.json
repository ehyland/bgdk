{
  "name": "bgdk-monorepo",
  "version": "0.2.0",
  "description": "Baked Goods Development Kit",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ehyland/bgdk.git"
  },
  "author": "Eamon Hyland <ehyland90@gmail.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@6.24.3",
  "scripts": {
    "dev": "preconstruct dev",
    "test": "pnpm lint",
    "lint": "manypkg check && prettier --check . && tsc --noEmit",
    "format": "prettier --write .",
    "build": "preconstruct build",
    "build:watch": "preconstruct watch",
    "add-change": "changeset add",
    "ci:prepare": "scripts/prepare-for-publish",
    "ci:version": "changeset version && pnpm install --lockfile-only && pnpm format",
    "ci:release": "pnpm ci:prepare && changeset publish",
    "example": "pnpm --filter ./examples/basic"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "manypkg": {
    "defaultBranch": "main",
    "ignoredRules": [
      "INCORRECT_REPOSITORY_FIELD"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@types/jest": "^27.4.1",
    "@types/ms": "^0.7.31",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.1",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.7",
    "prettier": "^2.6.2",
    "strip-ansi": "^6.0.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
