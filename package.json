{
  "name": "bgdk-monorepo",
  "version": "0.2.0",
  "description": "Baked Goods Development Kit",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ehyland/bgdk.git"
  },
  "author": "Eamon Hyland <ehyland90@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "preconstruct dev",
    "test": "yarn lint",
    "lint": "manypkg check && prettier --check . && tsc --noEmit",
    "format": "prettier --write .",
    "build": "preconstruct build",
    "build:watch": "preconstruct watch",
    "postinstall": "preconstruct dev",
    "add-change": "changeset add",
    "ci:prepare": "scripts/prepare-for-publish",
    "ci:version": "changeset version && yarn && yarn format",
    "ci:release": "yarn ci:prepare && changeset publish",
    "example": "manypkg run bgdk-basic-example"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "manypkg": {
    "defaultBranch": "main",
    "ignoredRules": [
      "INCORRECT_REPOSITORY_FIELD"
    ]
  },
  "volta": {
    "node": "14.17.6"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.17.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.2",
    "@types/jest": "^27.0.2",
    "@types/ms": "^0.7.31",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.4",
    "jest-watch-typeahead": "^1.0.0",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.2",
    "prettier": "^2.4.0",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
